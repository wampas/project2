<h1>Travelogue</h1>
<p>Your destination for peer reviews</p>

<%= form_tag home_index_path, :method => 'get' do %>
  <p>
    <%= label_tag :search %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="results">
	<% if @results %>
  <h3 id="resultTitle">Search Results</h3>
  <ul>
    <%= @results['results'].each do |r| %>
      <p class="destination">
        <em><%= r['name'] %></em>
      </p>
      <li class="data"><%= r['formatted_address'] %>
    <% end %>    
  </ul>
  <% end %>
</div>