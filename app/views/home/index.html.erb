<div class="jumbotron">

<h1>Travelogue</h1>
<p>Your destination for peer reviews</p>

<button type="button" class="btn btn-default">How It Works</button>
</div>

<%= form_tag home_index_path, :method => 'get' do %>
  <p>
    <%= label_tag :search %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="results">
	<% if @results %>
  <h3 id="resultTitle">Search Results</h3>
  <ul>
    <%= @results['results'].each do |r| %>
      <p class="destination">
        <%= r['name'] %>
      </p>
      <li class="data">
        <span><%= r['formatted_address'] %></span>
        <span><%= link_to "Add Article", new_article_path %></span>
      </li>
    <% end %>    
  </ul>
  <% end %>
</div>